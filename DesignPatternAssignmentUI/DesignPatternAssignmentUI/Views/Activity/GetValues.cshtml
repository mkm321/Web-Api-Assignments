
@model List<DesignPatternAssignmentUI.Models.Activity>
@{
    ViewBag.Title = "GetValues";
}

<h2 align="center">@ViewBag.name Details </h2>
<br />
<br />
<br />
<hr />
<table class="table table-responsive table-striped table-bordered">
    <thead>
        <tr>
            <th style="background-color: yellow; color: blue">Name</th>
            <th style="background-color: yellow; color: blue">Price</th>
            <th style="background-color: yellow; color: blue">Type</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var i in Model)
        {
        <tr>
            <td>@i.ActivityName</td>
            <td>@i.ActivityPrice</td>
            <td>@i.ActivityType</td>
            @using (Html
            .BeginForm("SendPutRequest", "Activity", FormMethod.Post))
            {
                if (i.IsSaved == "true")
                {
                    <td><input class="btn btn-primary" type="submit" value="Save" disabled /></td>
                }
                else
                {
                    <td><input type="hidden" name="Save" value="@i.ActivityId,Save" /><input class="btn btn-primary" type="submit" value="Save" /></td>
                }

            }
            @using (Html
            .BeginForm("SendPutRequest", "Activity", FormMethod.Post))
            {
                if (i.IsBooked == "true")
                {
                    <td><input class="btn btn-primary" type="submit" value="Book" disabled /></td>
                }
                else
                {
                    <td><input type="hidden" name="Save" value="@i.ActivityId,Book" /><input class="btn btn-primary" type="submit" value="Book" /></td>
                }
            }
        </tr>
        }
    </tbody>
</table>
@Html.ActionLink("Saved Items", "Saved", "Activity")
&nbsp; &nbsp; &nbsp;
@Html.ActionLink("Booked Items", "Booked", "Activity")

