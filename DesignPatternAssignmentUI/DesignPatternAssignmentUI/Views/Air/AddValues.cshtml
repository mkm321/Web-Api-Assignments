
@{
    ViewBag.Title = "AddValues";
}

<h2 align="center">@ViewBag.name Details </h2>
<br />
<br />
<br />
<hr />

<div class="row">
    <div class="col-md-4">
        <h2>Air </h2>
        @using (Html
            .BeginForm("SendPostRequest", "Air", FormMethod.Post))
        {
        <table>
            <tr>
                <td>@Html.Label("Name")</td>
                <td>@Html.TextBox("airName")</td>
            </tr>
            <tr>
                <td>&nbsp;</td>
                <td>&nbsp;</td>
            </tr>
            <tr>
                <td>@Html.Label("From")</td>
                <td>@Html.TextBox("activityFrom")</td>
            </tr>
            <tr>
                <td>&nbsp;</td>
                <td>&nbsp;</td>
            </tr>
            <tr>
                <td>@Html.Label("To")</td>
                <td>@Html.TextBox("airTo")</td>
            </tr>
            <tr>
                <td>&nbsp;</td>
                <td>&nbsp;</td>
            </tr>
            <tr>
                <td>@Html.Label("Saved")</td>
                <td>@Html.TextBox("isSaved")</td>
            </tr>
            <tr>
                <td>&nbsp;</td>
                <td>&nbsp;</td>
            </tr>
            <tr>
                <td>@Html.Label("Booked")</td>
                <td>@Html.TextBox("isBooked")</td>
            </tr>
            <tr>
                <td>&nbsp;</td>
                <td>&nbsp;</td>
            </tr>
            <tr>
                <td>@Html.Label("Class")</td>
                <td>@Html.TextBox("airClass")</td>
            </tr>
            <tr>
                <td>&nbsp;</td>
                <td>&nbsp;</td>
            </tr>
            <tr>
                <td>@Html.Label("Price")</td>
                <td>@Html.TextBox("airPrice")</td>
            </tr>
            <tr>
                <td>&nbsp;</td>
                <td>&nbsp;</td>
            </tr>
            <tr>
                <td colspan="2"><input type="submit" value="Add Air Details"</td>
            </tr>
        </table>
        }
        @TempData["Error"]
    </div>
</div>
