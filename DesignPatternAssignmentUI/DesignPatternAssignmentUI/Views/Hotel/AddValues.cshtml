
@{
    ViewBag.Title = "AddValues";
}

<h2 align="center">@ViewBag.name Details </h2>
<br />
<br />
<br />
<hr />

<div class="row">
    <div class="col-md-4">
        <h2>Hotel </h2>
        @using (Html
            .BeginForm("SendPostRequest", "Hotel", FormMethod.Post))
        {
            <table>
                <tr>
                    <td>@Html.Label("Name")</td>
                    <td>@Html.TextBox("hotelName")</td>
                </tr>
                <tr>
                    <td>&nbsp;</td>
                    <td>&nbsp;</td>
                </tr>
                <tr>
                    <td>@Html.Label("City")</td>
                    <td>@Html.TextBox("hotelCity")</td>
                </tr>
                <tr>
                    <td>&nbsp;</td>
                    <td>&nbsp;</td>
                </tr>
                <tr>
                    <td>@Html.Label("Available Rooms")</td>
                    <td>@Html.TextBox("hotelRooms")</td>
                </tr>
                <tr>
                    <td>&nbsp;</td>
                    <td>&nbsp;</td>
                </tr>
                <tr>
                    <td>@Html.Label("Saved")</td>
                    <td>@Html.TextBox("isSaved")</td>
                </tr>
                <tr>
                    <td>&nbsp;</td>
                    <td>&nbsp;</td>
                </tr>
                <tr>
                    <td>@Html.Label("Booked")</td>
                    <td>@Html.TextBox("isBooked")</td>
                </tr>
                <tr>
                    <td>&nbsp;</td>
                    <td>&nbsp;</td>
                </tr>
                <tr>
                    <td>@Html.Label("Room Type")</td>
                    <td>@Html.TextBox("hotelType")</td>
                </tr>
                <tr>
                    <td>&nbsp;</td>
                    <td>&nbsp;</td>
                </tr>
                <tr>
                    <td>@Html.Label("Price")</td>
                    <td>@Html.TextBox("hotelPrice")</td>
                </tr>
                <tr>
                    <td>&nbsp;</td>
                    <td>&nbsp;</td>
                </tr>
                <tr>
                    <td colspan="2"><input type="submit" value="Add Hotel Details"</td>
                </tr>
            </table>
        }
        @TempData["Error"]
    </div>
</div>
